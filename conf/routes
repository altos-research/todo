# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.todos

# Todos
POST    /                           controllers.Application.newTodo
DELETE  /:id                        controllers.Application.deleteTodo(id: Long)

# Tasks
GET     /:list_id                   controllers.Application.tasks(list_id: Long)
POST    /:list_id                   controllers.Application.newTask(list_id: Long)
DELETE  /:list_id/:id               controllers.Application.deleteTask(id: Long, list_id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
